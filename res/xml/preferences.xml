        <CheckBoxPreference
            android:defaultValue="false"
            android:key="boxHide"
            android:summary="@string/summary_daybegin"
            android:title="@string/title_daybegin" >
        </CheckBoxPreference>
        <CheckBoxPreference
            android:defaultValue="false"
            android:key="boxWlan"
            android:summary="@string/summary_wlan"
            android:title="@string/title_wlan" >
        </CheckBoxPreference>

        <Preference android:title="@string/app_about" >
            <intent
                android:action="android.intent.action.VIEW"
                android:targetClass="de.janssen.android.gsoplan.AboutGSOPlan"
                android:targetPackage="de.janssen.android.gsoplan" />
