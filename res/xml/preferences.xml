        <ListPreference
            android:defaultValue=""
            android:key="listElement1"
            android:summary="@string/summary_element"
            android:title="@string/title_element" >
        </ListPreference>

        <!-- 2tes Profil -->
    </PreferenceCategory>
    <PreferenceCategory
        android:key="2ndProfil"
        android:title="@string/catergory3_title" >
        <CheckBoxPreference
            android:defaultValue="false"
            android:key="checkboxUseFav"
            android:summary="@string/summary_usefav"
            android:title="@string/title_usefav" >
        </CheckBoxPreference>
        <ListPreference
            android:defaultValue=""
            android:key="listType2"
            android:summary="@string/summary_type"
            android:title="@string/title_type" >
        </ListPreference>
        <ListPreference
            android:defaultValue=""
            android:key="listElement2"
            android:summary="@string/summary_element"
            android:title="@string/title_element" >
